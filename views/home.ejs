<div class="page-header">
    <h1>Flapper News</h1>
</div>
<div ng-repeat="post in posts | orderBy: 'upvotes'">
    <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotesCount(post)"></span>
    {{post.upvotes}}
    <span class="post-title">
        <post-title></post-title>
    </span>
    <span>
        <a href="#/posts/{{$index}}">Comments</a>
    </span>
</div>
<form ng-submit="addPost()">
    <h3>Add a new post</h3>
    <div class="form-group">
        <input class="form-control" type="text" placeholder="Title" ng-model="title">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" placeholder="Link" ng-model="link">
    </div>

    <button class="btn btn-primary" type="submit">Post</button>
</form>